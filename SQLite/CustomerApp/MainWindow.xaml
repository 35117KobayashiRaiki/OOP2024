<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5">
                <TextBlock Text="名前" VerticalAlignment="Center" Width="60" />
                <TextBox x:Name="NameTextBox" Width="220"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5">
                <TextBlock Text="電話番号" VerticalAlignment="Center" Width="60" />
                <TextBox x:Name="PhoneTextBox" Width="220"/>
            </StackPanel>

            <Button Content="Save" x:Name="SaveButton" Click="SaveButton_Click" Margin="0,10,0,0"/>
            <Button Content="Read" x:Name="ReadButton" Click="ReadButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
